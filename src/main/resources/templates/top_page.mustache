<body>

<div class="first_block">
    <div class="block_bg">
        <link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
        <div id='stars'></div>
        <div id='stars2'></div>
        <div id='stars3'></div>
        <div id='title'></div>
        <div class="logo_top">
            <div id="block_img_monument">
                <div id="img_in_first_block">
                    <img class="main_image" src="images/top_page/monument_img.png" width="100%" style="filter: drop-shadow(0 0 20px #555);">
                </div>
            </div>

            <div id="block_info_firm">
                <div style="display: block;">
                    <div id="first_block_titel">Монумент-гранит</div>
                    <h1 id="first_block_text">Изготовление памятников в Глубоком</h1>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="small_titel">
    <div class="content_small_titel">
        <h2 class="small_titel_text">Популярные варианты</h2>
        <div class="line_small_titel"></div>
    </div>
</div>
<div id="id_list_monuments" class="list_monuments">
    <div class="_6_block_left">
        <div style="width: 64px;height: 64px">
            <!--            <img class="" style="width: 100%;height: 100%" src="images/slid_btn_left_dis.svg" />-->
        </div>
    </div>

    <div class="_6_block_right">
        <div style="height: 64px;width: 64px">
            <!--           <img class="" style="width: 100%;height: 100%" src="images/img_swipe_right.png" />-->
        </div>
    </div>

    <div class="slider">
        <div class="slider__wrapper">
            {{#ListElements}}
                <div class="slider__item" style="position: relative">
                    <div class="item_top_monument">
                        <!-- <img src="data:image/jpg;base64," height="100%" width="100%" style="  object-fit: cover;border-radius: 12px"/> -->

                        <div class="head_item">
                            <div style="display: block;">
                                {{#id}}<a class="btn_see_big_view" href="javascript:PopUpBigViewShow('/GetImage?id={{id}}')"><img class="main_image" src="/GetImage?id={{id}}" height="200px" style="filter: drop-shadow(0 0 20px #555);" alt=""></a>{{/id}}
                            </div>
                        </div>
                        <div class="body_item">
                            <div id="id_elem" style="display:none"></div>
                            <div class="item_titel">{{#name}}{{name}}{{/name}}</div>
                            <div class="item_price">{{#seePrice}}Цена:{{#price}}{{price}}{{/price}} б.р{{/seePrice}}</div>
                            <div class="item_material">{{#material}}Материал: {{material}}{{/material}}</div>
                            <div class="item_btn">
                                <a class="btn_add_monument" href="javascript:PopUpAddTaskShow({{id}})">
                                    <div style="color: #ffffff;">Заказать</div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/ListElements}}

        </div>
        <a class="slider__control slider__control_left" href="#" role="button"></a>
        <a class="slider__control slider__control_right slider__control_show" href="#" role="button"></a>
</div>

    <script src="scripts/slider_top_monuments.js"></script>

</div>

<div class="small_titel">
    <div class="content_small_titel">
        <h3 class="small_titel_text">Наши преимущества</h3>
        <div class="line_small_titel"></div>
    </div>
</div>

<div class="top_select">
    <div class="item_top_select">
        <div>
            <img src="images/top_select/img1.png" height="100px" style="padding-top: 20px;" >
        </div>
        <div class="text_top_select">Надёжные материалы</div>
    </div>
    <div class="item_top_select">
        <div>
            <img src="images/top_select/img4.png" height="100px" style="padding-top: 20px;" >
        </div>
        <div class="text_top_select">Качественная установка</div>
    </div>
    <div class="item_top_select">
        <div>
            <img src="images/top_select/img3.png" height="100px" style="padding-top: 20px;" >
        </div>
        <div class="text_top_select">Максимально быстро</div>
    </div>
</div>

<div class="small_titel">
    <div class="content_small_titel">
        <h4 class="small_titel_text">Используемые материалы</h4>
        <div class="line_small_titel"></div>
    </div>
</div>

<div class="materials">
    <div class="blog-slider">
        <div class="blog-slider__wrp swiper-wrapper">
            {{#ListMaterials}}
                <div class="blog-slider__item swiper-slide">
                    <div class="blog-slider__img">

                        {{#res}}<img src="data:image/jpg;base64,{{res}}" alt="">{{/res}}
                    </div>
                    <div class="blog-slider__content">
                        <span class="blog-slider__code"></span>
                        {{#name}}<div class="blog-slider__title">{{name}}</div>{{/name}}
                        {{#info}}<div class="blog-slider__text">{{info}}</div>{{/info}}
                        <!-- <a href="#" class="blog-slider__button">READ MORE</a> -->
                    </div>
                </div>
            {{/ListMaterials}}
          
        </div>
        <div class="blog-slider__pagination"></div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/js/swiper.min.js"></script>
<script src="scripts/js_materials.js"></script>

<div id="id_titel_work" class="small_titel">
    <div class="content_small_titel">
        <h5 class="small_titel_text">Наши работы</h5>
        <div class="line_small_titel"></div>
    </div>
</div>

<div class="photos_work">
    <div class="slideShow">
        <ul class="slideShow__container">
          {{#ListPhotos}}
            <li class="slideShow__slide">
                <figure class="slideShow__image" >
                    {{#res}}<img src="data:image/jpg;base64,{{res}}" style="height: 100%;width: 100%;object-fit: cover">{{/res}}
                </figure>
                <div class="slideShow__titleWrap">
                {{#titel}}<h2 class="slideShow__slideTitle">{{titel}}</h2>{{/titel}}
                {{#material}}<div class="slideShow__slideSubTitle">{{material}}</div>{{/material}}
                </div>
            </li>
          {{/ListPhotos}}
          
        </ul>
        <div class="slideShow__next"><i class="fa fa-angle-right"></i></div>
        <div class="slideShow__prev"><i class="fa fa-angle-left"></i></div>
      </div>

      <script src="scripts/photo_work.js"></script>
</div>




<div id="for_as" class="small_titel">
    <div class="content_small_titel">
        <h6 class="small_titel_text">О нас</h6>
        <div class="line_small_titel"></div>
    </div>
</div>

<div class="maps">
    <div class="about_as">
        <div class="for_as_titel">Контакты</div>
        <div class="item_kontakt">
            <img src="images/top_page/tag.png" alt="map" class="icon_item_tag">
            <div class="item_text">{{#locate}}{{locate}}{{/locate}}</div>
        </div>
        <div class="item_kontakt">
            <img src="images/top_page/phone-ic.png" alt="phone" class="icon_item_phone">
            <div class="item_text">{{#phone}}{{phone}}{{/phone}}</div>
        </div>
        <div class="item_kontakt">
            <img src="images/top_page/time-ic.png" alt="time" class="icon_item_time">
            <div class="item_text">{{#time}}{{time}}{{/time}}</div>
        </div>
        <div class="item_kontakt">
            <img src="images/top_page/mail-ic.png" alt="mail" class="icon_item_mail">
            <div class="item_text">{{#mail}}{{mail}}{{/mail}}</div>
        </div>
    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1784.3931724587883!2d27.693425441377684!3d55.132609420467716!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46dcac87a25b932f%3A0x523adcc8069d1838!2z0YPQuy4g0KjQvtC60L7Qu9Cw0LTQvtCy0L7QuSwg0JPQu9GD0LHQvtC60L7QtQ!5e0!3m2!1sru!2sby!4v1695807947904!5m2!1sru!2sby" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

</div>


<div class="block_nine">
    <div class="_9_block">
        <div class="text_in_block9">Монумент-гранит, 2023</div>
    </div>
    <div class="_9_block1">
        <div class="item_site1">
            <a href="/"></a>
        </div>
        <a class="item_site2" href="https://www.instagram.com/pamiatniki_glubokoye/">
            <a href="https://www.instagram.com/pamiatniki_glubokoye/"></a>
        </a>
    </div>
</div>

</div>

<div class="b-popup" id="coopPopUpAddTask">
    <div class="b-popup-content">
        <div class="popUp-blockTitel">
            <div class="titel_popUp">Заказ</div>
            <a class="btn_exit" href="javascript:PopUpAddTaskHide()">
                <img src="images/close_button.svg" />
            </a>
        </div>
        <div class="popUp-blockInfo">
            <input type="text" maxlength="250" class="form-control input_style" id="task_fio" placeholder="Ваше ФИО" value="" required="">
            <input type="tel" maxlength="15" class="form-control input_style" id="task_phone" placeholder="Номер телефона" value="" required="">
            <textarea maxlength="990" class="form-control input_more_style" id="task_more_info" placeholder="Дополнительная информация"></textarea>
        </div>
        <div class="popUp-blockBtn">
            <a class="btn_add_material" href="javascript:sendTaskToServer()">Заказать</a>
        </div>
    </div>
</div>

<div class="b-popup" id="coopPopUpMessage">
    <div class="b-popup-content">
        <div class="popUp-blockTitel">
            <div class="titel_popUp"></div>
            <a class="btn_exit" href="javascript:PopUpMessageHide()">
                <img src="images/close_button.svg" />
            </a>
        </div>
        <div class="popUp-blockInfo">
            <div class="text_message">Заявка успешно отправленна</div>
        </div>
        <div class="popUp-blockBtn">
            <a class="btn_add_material" href="javascript:PopUpMessageHide()">Ок</a>
        </div>
    </div>
</div>

